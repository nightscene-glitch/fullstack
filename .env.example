# Application Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://nightscene:password@localhost:5432/nightscene
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nightscene
DATABASE_USER=nightscene
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# QR Code Security
QR_SECRET=your-qr-code-signing-secret-key

# Payment Gateway Configuration
# Razorpay (Primary)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Stripe (Backup)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# SMS & Communication
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Email Configuration
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@nightscene.in
SENDGRID_FROM_NAME=NightScene

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
S3_BUCKET=nightscene-assets
CLOUDFRONT_DOMAIN=cdn.nightscene.in

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=nightscene-app
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@nightscene-app.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Monitoring & Logging
# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=NightScene-API

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Recommendation System
RECOMMENDATION_MODEL_PATH=./models/recommendation_model.pkl
RECOMMENDATION_CACHE_TTL=3600  # 1 hour

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_RECOMMENDATION_ENGINE=true
ENABLE_FRAUD_DETECTION=true
ENABLE_ANALYTICS_TRACKING=true

# Development Tools
ENABLE_SWAGGER=true
ENABLE_CORS=true
LOG_LEVEL=debug

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=*
HELMET_ENABLED=true

# Business Configuration
PLATFORM_COMMISSION_RATE=10.0  # Percentage
PAYMENT_GATEWAY_FEE=2.5  # Percentage
RESERVATION_EXPIRY_HOURS=24
MAX_TICKETS_PER_ORDER=10

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
WHATSAPP_NOTIFICATION_ENABLED=true

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=nightscene-backups